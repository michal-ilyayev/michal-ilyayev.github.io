---
import { Icon } from 'astro-icon/components';
---

<button id="scrollUp" class="scrollUpHidden">
  <Icon name="mdi:chevron-up" size={30} />
</button>

<script is:inline data-astro-rerun>
  (function initScrollUp() {
    const scrollUp = window.document.getElementById('scrollUp');

    if (!scrollUp) {
      return;
    }

    scrollUp.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    window.addEventListener('scroll', () => {
      if (window.scrollY > 200) {
        scrollUp.classList.remove('scrollUpHidden');
      } else {
        scrollUp.classList.add('scrollUpHidden');
      }
    });
  })();
</script>


<style is:global lang="scss">
  #scrollUp {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    bottom: 60px;
    right: 30px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-primary);
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.8);
    zoom: 1;
    opacity: 0.8;
    text-decoration: none;
    outline: none;
    cursor: pointer;
    visibility: visible;
    transition: all 0.25s linear;
    z-index: 2147483647;

    &:hover {
      opacity: 1;
    }

    &.scrollUpHidden {
      opacity: 0;
      visibility: hidden;
    }

    @media print {
      display: none;
      visibility: hidden;
    }

    .yarl__no_scroll & {
      display: none;
    }
  }
</style>
