---
import Header from '~/components/header/Header.astro';
import Footer from '~/components/footer/Footer.astro';
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const props = Astro.props;
---


<BaseLayout {...props}>
  <div class="flex flex-col justify-between min-h-dvh w-full h-full">
    <Header />

    <main class="flex-1 basis-0 relative">
      <slot />
    </main>

    <Footer />
  </div>
</BaseLayout>