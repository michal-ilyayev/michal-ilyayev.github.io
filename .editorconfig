# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
ij_visual_guides = 120
insert_final_newline = true
trim_trailing_whitespace = true

[{*.py,*.conf}]
indent_size = 4

[*.md]
max_line_length = 0
insert_final_newline = false
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false
